@model DBMSWebApp.Models.Row
@{
    ViewData["Title"] = "Create";
}
<head>
    <style>
        body {
            background-image: url(https://images.unsplash.com/photo-1637434659088-cec7b7ea8646?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            font-family: Brush Script MT cursive,URW Chancery L cursive;
        }

        .position {
            font-family: Brush Script MT cursive,URW Chancery L cursive;
            left: auto;
        }

        .btn {
            border-color: black;
            display: block;
            font-weight: 700;
            color: antiquewhite;
            text-align: center;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background: rgba(0, 0, 0, 0.5);
            font-family: Brush Script MT cursive,URW Chancery L cursive;
            border: 2px solid transparent;
            padding: 1.9rem 1.9rem;
            font-size: 1.5rem;
            line-height: 1.3;
            margin-bottom: 10px;
            margin-left: 10px;
            margin-right: 10px;
            border-radius: 0.9rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .display-4 {
            color: antiquewhite;
            font-size: 3.5rem;
            font-weight: 300;
            line-height: 1.2;
            border-radius: 0.9rem;
            background: rgba(0, 0, 0, 0.5);
        }

        .text-center {
            text-align: center !important;
            color: white;
            font-family: Brush Script MT cursive,URW Chancery L cursive;
        }
    </style>
</head>
<h1>Create</h1>

<h4>Row</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            @for (int i = 0; i < ViewBag.Table.Columns.Count; i++)
            {
                var col = ViewBag.Table.Columns[i];
                <div class="form-group">
                    <label asp-for="Cells[i].Value" class="control-label">@col.Name</label>
                    <input asp-for="Cells[i].Value" class="form-control" />
                    <input type="hidden" asp-for="Cells[i].ColumnID" value="@col.Id" />
                </div>
            }
            <div class="form-group">
                <input type="hidden" value="@ViewBag.Table.Id" name="TableId" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-tableId="@ViewBag.Table.Id">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
