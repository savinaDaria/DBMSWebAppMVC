@model DBMSWebApp.Models.Table
@{
    ViewData["Title"] = "Subtract Tables";
}
<head>
    <style>
        body {
            background-image: url(https://images.unsplash.com/photo-1637434659088-cec7b7ea8646?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            font-family: Brush Script MT cursive,URW Chancery L cursive;
        }

        .position {
            font-family: Brush Script MT cursive,URW Chancery L cursive;
            left: auto;
        }

        .btn {
            border-color: black;
            display: block;
            font-weight: 700;
            color: antiquewhite;
            text-align: center;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background: rgba(0, 0, 0, 0.5);
            font-family: Brush Script MT cursive,URW Chancery L cursive;
            border: 2px solid transparent;
            padding: 1.9rem 1.9rem;
            font-size: 1.5rem;
            line-height: 1.3;
            margin-bottom: 10px;
            margin-left: 10px;
            margin-right: 10px;
            border-radius: 0.9rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .display-4 {
            color: antiquewhite;
            font-size: 3.5rem;
            font-weight: 300;
            line-height: 1.2;
            border-radius: 0.9rem;
            background: rgba(0, 0, 0, 0.5);
        }

        .text-center {
            text-align: center !important;
            color: white;
            font-family: Brush Script MT cursive,URW Chancery L cursive;
        }
    </style>
</head>
<h2>@Model.Name</h2>

<table class="table table-responsive table-hover">
    <tr>

        @foreach (var d in Model.Columns)
        {
            <th>@d.Name</th>
        }
    </tr>
    @foreach (var d in Model.Rows)
    {
        <tr bgcolor="#8ecae6">
            @foreach (var cell in d.Cells)
            {
                <td>@cell.Value</td>
            }

        </tr>

    }
</table>
<div>
    <a asp-action="Index" asp-controller="Tables" asp-route-databaseId="@Model.DatabaseId">Back to List</a>
</div>
