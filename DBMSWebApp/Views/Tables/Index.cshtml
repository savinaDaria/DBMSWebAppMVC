@model IEnumerable<DBMSWebApp.Models.Table>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>
        body {
            background-image: url(https://images.unsplash.com/photo-1637434659088-cec7b7ea8646?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            font-family: Brush Script MT cursive,URW Chancery L cursive;
        }

        .position {
            font-family: Brush Script MT cursive,URW Chancery L cursive;
            left: auto;
        }

        .btn {
            border-color: black;
            display: block;
            font-weight: 700;
            color: antiquewhite;
            text-align: center;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background: rgba(0, 0, 0, 0.5);
            font-family: Brush Script MT cursive,URW Chancery L cursive;
            border: 2px solid transparent;
            padding: 1.9rem 1.9rem;
            font-size: 1.5rem;
            line-height: 1.3;
            margin-bottom: 10px;
            margin-left: 10px;
            margin-right: 10px;
            border-radius: 0.9rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .display-4 {
            color: antiquewhite;
            font-size: 3.5rem;
            font-weight: 300;
            line-height: 1.2;
            border-radius: 0.9rem;
            background: rgba(0, 0, 0, 0.5);
        }

        .text-center {
            text-align: center !important;
            color: white;
            font-family: Brush Script MT cursive,URW Chancery L cursive;
        }
    </style>
</head>
<h1>Tables</h1>

<p>
    <a asp-action="Create" asp-route-databaseId="@ViewBag.DatabaseId">Add table </a>
    <a asp-action="Sub" asp-route-databaseId="@ViewBag.DatabaseId">   Subtract tables </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Database)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr bgcolor="#8ecae6">
            <td >
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Database.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" asp-controller="Databases">Back to List</a>
</div>
